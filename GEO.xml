    <idlegear>
        <if p_status="resting">
         <equip set="Resting" />
        </if>
        <if pet_active="False"><equip set="Idle" /></if>
        <if pet_active="True"><equip set="Idle-LU" /></if>
        <if eq_rring="Trizek Ring">
        <equip lock="true">
         <rring>Trizek Ring</rring>              
        </equip>
      </if>
      <if eq_rring="Capacity Ring">
         <equip lock="true">
             <rring>Capacity Ring</rring>              
